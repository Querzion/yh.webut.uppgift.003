<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MA_Presentation_Avalonia.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://MA_Presentation_Avalonia/Resources/Styles/Buttons.axaml" />
        <StyleInclude Source="avares://MA_Presentation_Avalonia/Resources/Styles/Typography.axaml" />
    </Application.Styles>
    
    <Application.Resources>
        <!-- Colors are added on the request of ChatGPT.  -->
        <Color x:Key="BackgroundColor">#FFE4A3</Color>
        <Color x:Key="ForegroundColor">#000000</Color>
             <!-- The reason I got my fonts working eventually: https://www.youtube.com/watch?v=hAyeGWozi90 -->
        <FontFamily x:Key="AgaveNerdFont-Regular">/Resources/Fonts/AgaveNerdFont-Regular.ttf#Agave Nerd Font Regular</FontFamily>
        <FontFamily x:Key="AgaveNerdFont-Bold">/Resources/Fonts/AgaveNerdFont-Bold.ttf#Agave Nerd Font Bold</FontFamily>
    </Application.Resources>
</Application>